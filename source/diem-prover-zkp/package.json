{
  "name": "@atomica/diem-prover-zkp",
  "version": "0.1.0",
  "description": "ZK-SNARK based Aptos/Diem light client with off-chain BLS verification",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "compile:circuits": "cd circuits && ./compile.sh",
    "setup:ceremony": "cd circuits && ./setup-ceremony.sh",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "benchmark": "hardhat test test/Benchmark.test.ts",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "prover:build": "cd prover && cargo build --release",
    "prover:run": "cd prover && cargo run --release",
    "prover:test": "cd prover && cargo test",
    "verify": "hardhat verify",
    "clean": "hardhat clean && rm -rf cache artifacts && cd circuits && rm -rf build",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'"
  },
  "keywords": [
    "aptos",
    "diem",
    "bridge",
    "zk-snark",
    "groth16",
    "light-client",
    "ethereum"
  ],
  "author": "Atomica Labs",
  "license": "Apache-2.0",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "circomlib": "^2.0.5",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0",
    "snarkjs": "^0.7.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0"
  }
}
