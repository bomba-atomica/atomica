{
    "name": "@atomica/docker-testnet",
    "version": "0.1.0",
    "description": "Docker testnet harness for Atomica TypeScript integration tests",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "test": "bun test",
        "test:local-build": "bun test test/local-build.test.ts",
        "test:faucet": "bun test test/faucet.test.ts",
        "test:verification": "bun test test/verification.test.ts",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\""
    },
    "dependencies": {
        "aptos": "^1.22.1",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/bun": "^1.3.5",
        "@types/node": "^20.10.0",
        "prettier": "^3.7.4",
        "typescript": "^5.3.3"
    }
}
